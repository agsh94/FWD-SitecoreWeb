@using Sitecore.ExperienceForms.Mvc.Html
@model FWD.Foundation.Forms.CustomRadioButtonListViewModel

<label class="@Model.LabelCssClass" api-name ="@Model.APIName">@Html.DisplayTextFor(t => Model.Title)</label>
@foreach (var item in Model.Items)
{
    <label>
        <input type="radio" name="@Html.NameFor(m => Model.Value)" @if (item.Selected) { <text> checked</text>} value="@item.Value" data-sc-tracking="@Model.IsTrackingEnabled" data-sc-field-name="@Model.Name" data-sc-field-key="@Model.ConditionSettings.FieldKey" @Html.GenerateUnobtrusiveValidationAttributes(m => m.Value) />@item.Text
    </label>
}
@Html.ValidationMessageFor(m => Model.Value)